{
  "name": "pixijs-typescript-template",
  "version": "0.0.1",
  "description": "pixi.js typescript template",
  "scripts": {
    "start": "parcel ./src/index.html --port=8080 --open ",
    "build": "parcel build ./src/index.html"
  },
  "author": "dev",
  "license": "",
  "dependencies": {
    "pixi.js": "^7.1.2"
  },
  "devDependencies": {
    "@types/node": "^18.14.6",
    "parcel-bundler": "^1.12.4",
    "parcel-plugin-static-files-copy": "^2.4.3",
    "typescript": "^4.9.5"
  },
  "staticFiles": {
    "staticPath": [
      {
        "staticPath": "./src/assets",
        "staticOutDir": "./assets"
      }
    ],
    "watcherGlob": "**"
  },
  "alias": {
    "src": "./src"
  }
  
}
